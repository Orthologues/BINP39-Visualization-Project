    "graphql": "^15.4.0",
    "graphql-tag": "^2.11.0",
    "jquery": "^3.5.1",
    "js-file-download": "^0.4.12",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.18",
    "python-shell": "^2.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
